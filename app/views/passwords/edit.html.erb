<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-indigo-50 to-indigo-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full bg-white rounded-2xl shadow-xl p-8">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= t('auth.passwords.edit.title') %></h1>
      <p class="text-gray-600"><%= t('auth.passwords.edit.subtitle') %></p>
    </div>

    <% if alert = flash[:alert] %>
      <div class="mb-6 p-4 bg-red-50 border border-red-200 text-red-700 rounded-lg text-sm">
        <%= alert %>
      </div>
    <% end %>

    <%= form_with url: password_path(params[:token]), method: :put, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :password, t('auth.passwords.edit.password_label'), class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.password_field :password, 
            required: true, 
            autocomplete: "new-password", 
            placeholder: t('auth.passwords.edit.password_placeholder'), 
            maxlength: 72, 
            class: "w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition" %>
      </div>

      <div>
        <%= form.label :password_confirmation, t('auth.passwords.edit.password_confirmation_label'), class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.password_field :password_confirmation, 
            required: true, 
            autocomplete: "new-password", 
            placeholder: t('auth.passwords.edit.password_confirmation_placeholder'), 
            maxlength: 72, 
            class: "w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition" %>
      </div>

      <%= form.submit t('auth.passwords.edit.submit_button'), class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-3 px-4 rounded-lg transition duration-200 cursor-pointer shadow-sm" %>
    <% end %>

    <p class="mt-6 text-center text-sm text-gray-600">
      <%= link_to t('auth.passwords.edit.back_to_login'), new_session_path, class: "text-indigo-600 hover:text-indigo-500 font-medium transition" %>
    </p>
  </div>
</div>
