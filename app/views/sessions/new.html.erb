<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full bg-white rounded-2xl shadow-xl p-8">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= t('auth.sessions.title') %></h1>
      <p class="text-gray-600"><%= t('auth.sessions.subtitle') %></p>
    </div>

    <% if alert = flash[:alert] %>
      <div class="mb-6 p-4 bg-red-50 border border-red-200 text-red-700 rounded-lg text-sm">
        <%= alert %>
      </div>
    <% end %>

    <% if notice = flash[:notice] %>
      <div class="mb-6 p-4 bg-green-50 border border-green-200 text-green-700 rounded-lg text-sm">
        <%= notice %>
      </div>
    <% end %>

    <%= form_with url: session_url, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :email_address, t('auth.sessions.email_label'), class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.email_field :email_address, 
            required: true, 
            autofocus: true, 
            autocomplete: "username", 
            placeholder: t('auth.sessions.email_placeholder'), 
            value: params[:email_address], 
            class: "w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition" %>
      </div>

      <div>
        <div class="flex items-center justify-between mb-2">
          <%= form.label :password, t('auth.sessions.password_label'), class: "block text-sm font-medium text-gray-700" %>
          <%= link_to t('auth.sessions.forgot_password'), new_password_path, class: "text-sm text-gray-600 hover:text-gray-900 transition" %>
        </div>
        <%= form.password_field :password, 
            required: true, 
            autocomplete: "current-password", 
            placeholder: t('auth.sessions.password_placeholder'), 
            maxlength: 72, 
            class: "w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition" %>
      </div>

      <%= form.submit t('auth.sessions.login_button'), class: "w-full bg-gray-900 hover:bg-gray-800 text-white font-medium py-3 px-4 rounded-lg transition duration-200 cursor-pointer" %>
    <% end %>

    <div class="mt-6 text-center">
      <p class="text-sm text-gray-600">
        <%= t('auth.sessions.dont_have_account') %>
        <%= link_to t('auth.sessions.signup_link'), new_registration_path, class: "font-medium text-blue-600 hover:text-blue-500 transition" %>
      </p>
    </div>
  </div>
</div>
