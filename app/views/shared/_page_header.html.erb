<div class="mb-8">
  <% if defined?(button_path) && button_path %>
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= title %></h1>
        <% if defined?(subtitle) && subtitle %>
          <p class="mt-2 text-sm text-gray-600"><%= subtitle %></p>
        <% end %>
      </div>
      <%= link_to button_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" do %>
        <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
        </svg>
        <%= button_text %>
      <% end %>
    </div>
  <% else %>
    <h1 class="text-3xl font-bold text-gray-900"><%= title %></h1>
    <% if defined?(subtitle) && subtitle %>
      <p class="mt-2 text-sm text-gray-600"><%= subtitle %></p>
    <% end %>
  <% end %>
</div>
