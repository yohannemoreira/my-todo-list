<li class="py-4 hover:bg-gray-50 transition-colors -mx-6 px-6">
  <div class="flex items-start justify-between">
    <div class="flex items-start flex-1">
      <%= button_to toggle_list_todo_path(list, todo), method: :patch, class: "flex-shrink-0 text-gray-400 hover:text-indigo-600 transition-colors" do %>
        <% if todo.completed %>
          <svg class="h-5 w-5 text-indigo-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        <% else %>
          <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        <% end %>
      <% end %>
      <div class="ml-3 flex-1">
        <div class="flex items-center justify-between">
          <p class="text-sm font-medium text-gray-900 <%= 'line-through text-gray-500' if todo.completed %>">
            <%= link_to todo.name, list_todo_path(list, todo), class: "hover:text-indigo-600 transition-colors" %>
          </p>
          <% if todo.completed %>
            <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
              Done
            </span>
          <% end %>
        </div>
        <% if todo.description.present? %>
          <p class="text-sm text-gray-500 mt-1 <%= 'line-through' if todo.completed %>"><%= todo.description %></p>
        <% end %>
        <div class="mt-2 flex space-x-3">
          <%= link_to "Edit", edit_list_todo_path(list, todo), class: "text-xs text-gray-600 hover:text-gray-800 font-medium transition-colors" %>
          <%= button_to "Delete", list_todo_path(list, todo), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-xs text-red-600 hover:text-red-800 font-medium transition-colors" %>
        </div>
      </div>
    </div>
  </div>
</li>
