<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-4">
      <%= render 'shared/back_link', path: list_todo_path(@list, @todo), text: t('todos.back_to_task') %>
    </div>

    <%= render 'shared/page_header', 
        title: t('todos.edit_task'), 
        subtitle: t('todos.edit_subtitle', list_name: @list.name) %>

    <div class="bg-white shadow-sm rounded-lg border border-gray-200">
      <div class="px-6 py-5">
        <%= render 'form', list: @list, todo: @todo, cancel_path: list_todo_path(@list, @todo), submit_text: t('todos.form.update_button') %>
      </div>
    </div>
  </div>
</div>
