<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-4">
      <%= render 'shared/back_link', path: list_path(@list), text: t('todos.back_to_list', list_name: @list.name) %>
    </div>

    <%= render 'shared/notice_flash' %>

    <div class="bg-white shadow-sm rounded-lg border border-gray-200">
      <div class="px-6 py-5 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <% if @todo.completed %>
              <svg class="h-8 w-8 text-green-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            <% else %>
              <svg class="h-8 w-8 text-yellow-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            <% end %>
            
            <div>
              <h1 class="text-2xl font-bold text-gray-900 <%= 'line-through text-gray-500' if @todo.completed %>">
                <%= @todo.name %>
              </h1>
              <p class="text-sm text-gray-500 mt-1">
                <%= t('todos.show.from_list') %> <%= link_to @list.name, list_path(@list), class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
              </p>
            </div>
          </div>

          <% if @todo.completed %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
              <svg class="-ml-0.5 mr-1.5 h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <%= t('todos.status.completed') %>
            </span>
          <% else %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
              <svg class="-ml-0.5 mr-1.5 h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
              </svg>
              <%= t('todos.status.pending') %>
            </span>
          <% end %>
        </div>
      </div>

      <div class="px-6 py-5">
        <div class="mb-6">
          <h2 class="text-sm font-medium text-gray-900 mb-2"><%= t('todos.show.description_title') %></h2>
          <% if @todo.description.present? %>
            <p class="text-gray-700 <%= 'line-through text-gray-500' if @todo.completed %>"><%= @todo.description %></p>
          <% else %>
            <p class="text-gray-400 italic"><%= t('todos.show.no_description') %></p>
          <% end %>
        </div>

        <div class="border-t border-gray-200 pt-4 mb-6">
          <dl class="grid grid-cols-1 gap-4 sm:grid-cols-2">
            <div>
              <dt class="text-sm font-medium text-gray-500"><%= t('todos.show.created_label') %></dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @todo.created_at.strftime('%B %d, %Y at %I:%M %p') %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500"><%= t('todos.show.last_updated_label') %></dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @todo.updated_at.strftime('%B %d, %Y at %I:%M %p') %></dd>
            </div>
          </dl>
        </div>

        <div class="flex flex-wrap gap-3 pt-4 border-t border-gray-200">
          <%= button_to toggle_list_todo_path(@list, @todo), method: :patch, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white #{@todo.completed ? 'bg-yellow-600 hover:bg-yellow-700' : 'bg-green-600 hover:bg-green-700'} focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-#{@todo.completed ? 'yellow' : 'green'}-500 transition-colors" do %>
            <% if @todo.completed %>
              <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM7 9a1 1 0 000 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
              </svg>
              <%= t('todos.show.mark_as_pending') %>
            <% else %>
              <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <%= t('todos.show.mark_as_completed') %>
            <% end %>
          <% end %>

          <%= link_to edit_list_todo_path(@list, @todo), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" do %>
            <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
            </svg>
            <%= t('todos.show.edit_task') %>
          <% end %>

          <%= button_to list_todo_path(@list, @todo), 
              method: :delete, 
              data: { 
                controller: "delete",
                action: "click->delete#confirm",
                delete_title_value: t('todos.delete.title'),
                delete_message_value: t('todos.delete.message', name: @todo.name)
              }, 
              class: "inline-flex items-center px-4 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors" do %>
            <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
            <%= t('todos.show.delete_task') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
